extends layout
block content
      .maincontent
        .formHold
          h1.itemtitle Login
          if notification
            if showNotification
            ul
            each msg in showNotification
              li.notify #{msg}

          form(action='/login', method='post')
                  div
                    label Username:
                    input(type='text', name='username')
                  div
                    label Password:
                    input(type='password', name='password')
                  div
                    input(type='submit', value='Log In')