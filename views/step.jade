extends layout

block content
      .maincontent

              each step in indOne
                .video
                  h1.itemtitle #{step.name}

                  iframe#player.centered(width='100%', height='100%', frameborder='0', allowFullScreen='allowFullScreen', autoplay = '1', 
                  src = 'https://www.youtube.com/embed/' + step.id +"?start="+ step.start)
                  h2.itemtitle http://www.youtube.com/embed/#{step.id}?start=#{step.start}
