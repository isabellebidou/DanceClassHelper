extends layout
block content
      
    .maincontent
        .formHold
          h1.itemtitle Edit this class
          
          each row in res1
            form(method = "post")
              fieldset
                label(for= "newname") Name:
                input(name= "newname", type = "text", value = "#{row.className}") 
                label(for= "newdate") Date:"#{row.classDate}"
                input(name= "newdate", type = "date", value = "{row.classDate}") 
                label(for= "newvenue") Venue:
                input(name= "newvenue", type = "text", value = "#{row.classVenue}") 
                label(for= "newtime") Time:
                input(name= "newtime", type = "time", value = "#{row.classTime}") 
                label(for= "newprice") Price:
                input(name= "newprice", type = "text", value = "#{row.classPrice}")
                label(for= "newcomments") Comments:
                input(name= "newcomments", type = "text", value = "#{row.classComments}") 
                label(for= "newlink") Link:
                input(name= "newlink", type = "url", value = "#{row.Link}") 
                button.button(type="submit") Update
                
